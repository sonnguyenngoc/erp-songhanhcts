<% title @service.name %>
<!-- Page Title bar -->
<section class="defult-page-title overlay-black">
    <div class="container clearfix">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="page-title-box center991">
                    <div class="page-title-content">
                        <h1><span><%= @service.name %></span></h1>
                        <%= link_to "Trang chủ", erp_songhanhcts.home_path %> <i class="fa fa-angle-double-right"></i>
                        <%= link_to 'Lĩnh vực hoạt động', "javascript:void(0)" %> <i class="fa fa-angle-double-right"></i>
                        <%= link_to @service.category_name, service_level_1_link(@service.category) %> <i class="fa fa-angle-double-right"></i>
                        <%= link_to @service.name, "javascript:void(0)" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<% if @service.content.present? %>
<!-- Service Start -->
<section class="about-areas">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="about-col-two">
                    <%= @service.content.html_safe %>
                </div>
            </div>
        </div>
    </div>
</section>
<% end %>

<% if @pictures.present? %>
<!-- Album -->
<section class="galary-areas"> 
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h3>Hình ảnh -  <%= @service.name %></h3>
                </div>
            </div>
            <% @pictures.each_with_index do |picture,index| %>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="image-element">
                        <a href="<%= picture.image_url %>" data-fancybox="images" data-caption="<%= picture.name %>">
                            <%= image_tag(picture.image_url, alt: picture.name) %>
                        </a>
                    </div>
                </div>
                <%= "</div><div class=\"row\">".html_safe if index%4 == 3 %>
            <% end %>
        </div>
    </div>
</section>
<% end %>