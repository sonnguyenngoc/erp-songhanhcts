<% title "Nhận diện #{@identity.name}" %>
<!-- Page Title bar -->
<section class="defult-page-title overlay-black">
    <div class="container clearfix">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="page-title-box center991">
                    <div class="page-title-content">
                        <h2><span><%= 'Nhận diện thương hiệu' %></span></h2>
                            <%= link_to "Trang chủ", erp_songhanhcts.home_path %> <i class="fa fa-angle-double-right"></i>
                            <%= link_to "Giới thiệu", erp_songhanhcts.about_us_path %> <i class="fa fa-angle-double-right"></i>
                            <%= link_to @identity.name, "javascript:void(0)" %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Blog Start -->
<section class="blog-details">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h3>Nội dung nhận diện -  <%= @identity.name %></h3>
                </div>
            </div>
            <div class="col-md-12 col-sm-12">
                <div class="blog-details-col">
                    <%= @identity.content.html_safe %>
                </div>
            </div>
        </div>
    </div>
</section>

<% if @pictures.present? %>
<!-- Album -->
<section class="galary-style"> 
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h3>Hình ảnh -  <%= @identity.name %></h3>
                </div>
            </div>
            <% @pictures.each_with_index do |picture,index| %>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 column-margin">
                    <a href="#">
                        <%= link_to image_tag(picture.image_url, alt: picture.name), '#' %>
                    </a>
                </div>
                <%= "</div><div class=\"row\">".html_safe if index%4 == 3 %>
            <% end %>
        </div>
    </div>
</section>
<% end %>