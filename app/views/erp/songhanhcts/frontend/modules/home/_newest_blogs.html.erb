<% if !@newest_blogs.empty? %>
    <% if @newest_blogs.count >= 3 %>
        <section class="blog-area home-module">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="section-title">
                            <div class="title-style">
                                <h2>Tin Tức Mới Nhất</h2>
                            </div>
                            <p>Nơi chia sẻ và cập nhật những tin tức bổ ích đến với khách hàng</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <% @newest_blogs.each_with_index do |blog,index| %>
                        <div class="col-lg-4 col-md-4 <%= 'hidden-lg hidden-md' if (index + 1) >= 4 %> col-sm-6 col-xs-6 fw-600">
                             <div class="blog-col wow fadeIn" data-wow-duration="1s" data-wow-delay=".0s">
                                 <div class="blog-img">
                                    <%= link_to image_tag(article_image(blog.image.medium, 'medium'), alt: blog.name), article_link(blog) %>
                                    <div class="post-date meta">
                                        <span><i class="fa fa-user-o" aria-hidden="true"></i> SONG HANH cts </span>
                                        <span><i class="fa fa-clock-o" aria-hidden="true"></i> <%= blog.created_at.strftime("%d/%m/%Y") %></span>
                                    </div>
                                 </div>
                                 <div class="blog-content">
                                     <h4><%= link_to blog.name, article_link(blog) %></h4>
                                     <p><%= short_text(blog.content, 25) %>...</p>
                                 </div>
                             </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </section>
    <% end %>
<% end %>