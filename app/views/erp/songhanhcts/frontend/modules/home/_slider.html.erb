<section class="main-slider-area">
    <ul class="main-slider slide">
        <% @sliders.each do |slider| %>
            <li class="slide__item item-bg-default">
                <%= image_tag(slider.image_url) %>
                <% if slider.show_caption? %>
                    <div class="slide-caption">
                        <h2 class="slide-caption__title"><%= slider.name %><span></span></h2>
                        <% if slider.note.present? %>
                            <p class="slide-caption__desc"><%= slider.note %></p>
                        <% end %>
                        <% if slider.link_url.present? %>
                            <%= link_to 'Xem chi tiáº¿t', slider.link_url, title: slider.name, class: 'btn' %>
                        <% end %>
                    </div>
                <% end %>
            </li>
        <% end %>
    </ul>
</section>