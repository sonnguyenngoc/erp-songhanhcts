<% title "Tin tức" %>
<!-- Page Title bar -->
<section class="defult-page-title overlay-black">
  <div class="container clearfix">
      <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
              <div class="page-title-box center991">
                  <div class="page-title-content">
                    <h2>Danh sách <span>Tin tức</span></h2>
                    <p>
                        <%= link_to "Trang chủ", erp_songhanhcts.home_path %> <i class="fa fa-angle-double-right"></i>
                        <%= link_to "Tin tức", "javascript:void(0)" %>
                    </p>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>

<!-- Blog Start -->
<section class="blog-sidebar-section">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-12">
                <div class="row">
                    <% (1..5).each do |blog| %>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="blog-full-col">
                                <div class="blog-full-img">
                                    <img src="/songhanhcts/images/blog/big-1.jpg" alt="">
                                    <div class="blog-full-wd-bar">
                                      <div class="right-angle"></div>
                                      <ul>
                                        <li><i class="fa fa-user-o" aria-hidden="true"></i><a href="#">SONG HANH cts</a></li>
                                        <li><i class="fa fa-clock-o" aria-hidden="true"></i><a href="#">10 phút trước</a></li>
                                        <li><i class="fa fa-eye" aria-hidden="true"></i><a href="#">18 Lượt xem</a></li>
                                      </ul>
                                    </div>
                                </div>
                                <h2>
                                    <%= link_to "NHỮNG SAI LẦM CƠ BẢN TRONG VIỆC ĐẶT MẬT KHẨU MÀ NGƯỜI DÙNG INTERNET THƯỜNG XUYÊN MẮC PHẢI",
                                        erp_songhanhcts.news_detail_path(news_id: 1, title: "tieu-de-bai-viet")
                                    %>
                                </h2>
                                <p>
                                    Sử dụng một mật khẩu cho nhiều tài khoản hay dùng tên các nhân vật, bộ phim, thương hiệu yêu thích là hai trong số những sai lầm của người dùng trong việc lựa chọn mật khẩu cho các tài khoản online của mình.
                                </p>
                            </div>
                        </div>
                    <% end %>
                </div>
                <!-- Pagination -->
                <div class="inner-pagination pagination m-none">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination m-none">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <%= render "erp/songhanhcts/frontend/modules/blog/news/sidebar" %>
            </div> 
        </div>
    </div>
</section>