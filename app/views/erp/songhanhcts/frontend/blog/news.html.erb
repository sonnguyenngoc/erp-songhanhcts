<% title "Tin tức" %>
<!-- Page Title bar -->
<section class="defult-page-title overlay-black">
  <div class="container clearfix">
      <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
              <div class="page-title-box center991">
                  <div class="page-title-content">
                    <h2>Danh sách <span>Tin tức</span></h2>
                    <p>
                        <%= link_to "Trang chủ", erp_songhanhcts.home_path %> <i class="fa fa-angle-double-right"></i>
                        <%= link_to "Tin tức", "javascript:void(0)" %>
                    </p>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>

<!-- Blog Start -->
<section class="blog-sidebar-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-12">
                <% if @blogs.count > 0 %>
                    <div class="row">
                        <% @blogs.each do |blog| %>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="blog-full-col">
                                    <div class="blog-full-img">
                                        <%= link_to image_tag(article_image(blog.image.large, 'large'), alt: blog.name), article_link(blog) %>
                                        <div class="blog-full-wd-bar">
                                          <div class="right-angle"></div>
                                          <ul>
                                            <li><i class="fa fa-user-o" aria-hidden="true"></i>SONG HANH cts</li>
                                            <li><i class="fa fa-clock-o" aria-hidden="true"></i><%= relative_time(blog.created_at) %></li>
                                            <li><i class="fa fa-eye" aria-hidden="true"></i>18 Lượt xem</li>
                                          </ul>
                                        </div>
                                    </div>
                                    <h2>
                                        <%= link_to blog.name, article_link(blog) %>
                                    </h2>
                                    <p>
                                        <%= short_text(blog.content, 80) %>...
                                    </p>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <!-- Pagination -->
                    <%= erp_datalist_pagination(@blogs) %>
                <% else %>
                    <div class="alert alert-warning">
                        <i class="fa fa-warning"></i> Không tìm thấy danh sách bài viết.
                    </div>
                <% end %>
            </div>
            <div class="col-md-4 col-sm-12">
                <%= render "erp/songhanhcts/frontend/modules/blog/news/sidebar" %>
            </div> 
        </div>
    </div>
</section>